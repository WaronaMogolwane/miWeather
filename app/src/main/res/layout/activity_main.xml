<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/nadeshiko_pink">


    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/cityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="-"
            android:textColor="@color/state_grey"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/countryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="-"
            android:textColor="@color/state_grey"
            android:textSize="12sp" />



        <androidx.cardview.widget.CardView
            android:id="@+id/descriptionCard"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="30dp"
            android:elevation="8dp"
            android:layout_marginBottom="50dp"
            android:layout_below="@id/countryTextView">

            <RelativeLayout
                android:id="@+id/topCardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="-"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/dateTextView"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/weatherImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/ic_sunny"
                        app:tint="@color/sunny_yellow" />

                    <TextView
                        android:id="@+id/temperatureTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/weatherImageView"
                        android:text="-"
                        android:textColor="@color/state_grey"
                        android:textSize="30sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â°"
                        android:textSize="40sp"
                        android:layout_toEndOf="@id/temperatureTextView"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="-"
                    android:textSize="15sp" />



            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionCard"
            android:layout_centerInParent="true"
            android:elevation="8dp"
            app:cardCornerRadius="30dp">


            <GridLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="7">

                <TextView
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Today" />

                <ImageView
                    android:id="@+id/todayIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_sunny"
                    app:tint="@color/sunny_yellow" />

                <TextView
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Today" />

                <ImageView
                    android:id="@+id/todayIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_sunny"
                    app:tint="@color/sunny_yellow" />

                <TextView
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Today" />

                <ImageView
                    android:id="@+id/todayIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_sunny"
                    app:tint="@color/sunny_yellow" />

                <TextView
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Today" />

                <ImageView
                    android:id="@+id/todayIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_sunny"
                    app:tint="@color/sunny_yellow" />

                <TextView
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Today" />

                <ImageView
                    android:id="@+id/todayIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_sunny"
                    app:tint="@color/sunny_yellow" />

                <TextView
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Today" />

                <ImageView
                    android:id="@+id/todayIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_sunny"
                    app:tint="@color/sunny_yellow" />

                <TextView
                    android:layout_column="0"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="Today" />

                <ImageView
                    android:id="@+id/todayIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_sunny"
                    app:tint="@color/sunny_yellow" />



            </GridLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>